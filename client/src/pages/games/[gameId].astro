---
import Layout from "../../layouts/Layout.astro";
import InvalidRoom from "../../components/InvalidRoom.astro"
import { CreatePlayer } from "../../components/CreatePlayer";
import { validate } from "uuid";
const { gameId } = Astro.params
if (!gameId) return;
const validateGameId = validate(gameId)
---

{
    validateGameId ?
    <Layout title="Knucklebones">
        <CreatePlayer gameId={gameId} client:only="react"/>
    </Layout> :
    <Layout title="Knucklebones">
        <InvalidRoom/>
    </Layout>

}